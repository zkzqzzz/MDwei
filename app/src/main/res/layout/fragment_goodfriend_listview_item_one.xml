<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_6"
    android:layout_marginLeft="@dimen/space_6"
    android:layout_marginRight="@dimen/space_6"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_good_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.administrator.mdwei.view.CircleImageView
                android:id="@+id/iv_good_profile_image_url"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:layout_marginTop="@dimen/space_8"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_good_profile_image_url"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/iv_good_profile_image_url"
                android:text="方与圆之间"/>

            <TextView
                android:id="@+id/tv_good_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_good_profile_image_url"
                android:layout_alignLeft="@id/tv_good_name"
                android:layout_below="@id/tv_good_name"
                android:layout_marginRight="@dimen/space_8"
                android:layout_toRightOf="@id/iv_good_profile_image_url"
                android:gravity="center"
                android:text="昨天 21:21"/>

            <TextView
                android:id="@+id/tv_good_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_good_profile_image_url"
                android:layout_below="@id/tv_good_name"
                android:layout_marginRight="@dimen/space_8"
                android:layout_toRightOf="@id/tv_good_created_at"
                android:gravity="center"
                android:text="来自iPhone6"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_good_original_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:text="4155555555555555555"
            android:visibility="gone"/>

        <com.example.administrator.mdwei.view.ImageViewViewGroup
            android:id="@+id/vg_good_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"></com.example.administrator.mdwei.view.ImageViewViewGroup>

        <TextView
            android:id="@+id/tv_good_reprint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:text="4155555555555555555"
            android:visibility="gone"/>

        <com.example.administrator.mdwei.view.ImageViewViewGroup
            android:id="@+id/vg_good_reprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"></com.example.administrator.mdwei.view.ImageViewViewGroup>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:background="@color/text_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/timeline_topic_icon_retweet"/>

                <TextView
                    android:id="@+id/tv_good_reposts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="260"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/text_color"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/timeline_topic_icon_comment"/>

                <TextView
                    android:id="@+id/tv_good_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="260"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/text_color"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_good_linked"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/timeline_topic_icon_like"/>

                <TextView
                    android:id="@+id/tv_good_attitudes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="260"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
